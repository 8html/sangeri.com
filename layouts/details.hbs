---
layout: default.hbs
---
<div class="content menupad">
  <div class="sliderkit ip-slider">
    <div class="sliderkit-nav">
      <div class="sliderkit-nav-clip">
        <h3>{{which column.imagestitle title}}</h3>
        <ul>
          {{#if column.images}}
            {{#eachIndex column.images}}
              <li><a href="#"><img src="{{item}}"></a></li>
            {{/eachIndex}}
          {{else}}
            {{#if column.list}}
              {{#eachIndex column.list}}
                {{#is item.data.slide true}}
                  <li><a href="#"><img src="{{item.data.image}}"></a></li>
                {{/is}}
              {{/eachIndex}}
            {{/if}}
          {{/if}}
        </ul>
      </div>
    </div>
    <div class="sliderkit-panels">
      {{#if column.images}}
        {{#eachIndex column.images}}
          <div class="sliderkit-panel">
            <img src="{{item}}">
          </div>
        {{/eachIndex}}
      {{else}}
        {{#if column.list}}
          {{#eachIndex column.list}}
            {{#is item.data.slide true}}
              <div class="sliderkit-panel">
                <img src="{{item.data.image}}">
              </div>
            {{/is}}
          {{/eachIndex}}
        {{/if}}
      {{/if}}
    </div>
    <div class="sbhead"></div>
  </div>
  <div class="ip-content">
    <div class="sidebar">
      <div class="sb-head">
        <a href="{{column.titlelink}}">{{column.title}}</a>
      </div>
      <div class="sb-list">
        {{#if column.sidelist}}
          {{#eachProperty column.sidelist}}
            <a href="{{get value}}"{{#startsWith ../permalink value}} class="active"{{/startsWith}}>{{key}} <em>&#10095;</em></a>
          {{/eachProperty}}
        {{else}}
          {{#if column.list}}
            {{#eachIndex column.list}}
              <a href="{{item.filename}}"{{#startsWith ../permalink item.filename}} class="active"{{/startsWith}}>{{item.data.title}} <em>&#10095;</em></a>
            {{/eachIndex}}
          {{/if}}
        {{/if}}
      </div>
      <div class="contactbox">
        <a href="/contact/" class="contactimg">联系我们</a>
      </div>
    </div>
    <div class="main">
      {{>body}}
    </div>
    <div class="clearfix"></div>
  </div>
</div>
